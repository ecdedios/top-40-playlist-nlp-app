<MyGrid>:

    GridLayout:
        cols:1
        size: root.width - 20, root.height - 20
        pos: 10, 10

        Label:
            text: "Top 40 Playlist"
            font_size: 36
            size_hint_y: 1

        GridLayout:
            cols: 2
            size_hint_y: 5

            GridLayout:
                cols: 1
                size_hint_x: 2.5

                GridLayout:
                    cols: 2
                    size_hint_y: 1

                    TextInput:
                        id: ti_message
                        text: "Click on the LOAD FILE button."
                        size_hint_x: 4

                    PathButton:
                        text: "LOAD FILE"
                        size_hint_x: 1

                GridLayout:
                    cols: 1
                    size_hint_y: 5

                    TextInput:
                        id: ti_output
                        multiline: True
                        text: ""


            GridLayout:
                cols:1

                GridLayout:
                    cols:3

                    Button:
                        id: btn_bi
                        text: "2"

                    Button:
                        id: btn_tri
                        text: "3"

                    Button:
                        id: btn_qual
                        text: "4"

                GridLayout:
                    cols: 2

                    Button:
                        id: btn_person
                        text: "Person"

                    Button:
                        id: btn_group
                        text: "Group"

                    Button:
                        id: btn_org
                        text: "Org"

                    Button:
                        id: btn_geo
                        text: "Geo"

                    Button:
                        id: btn_product
                        text: "Product"

                    Button:
                        id: btn_event
                        text: "Event"

                Button:
                    text:"CLOSE"
                    on_press: root.btn_close()